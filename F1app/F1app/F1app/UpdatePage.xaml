<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F1app.UpdatePage">
  <!--Pages can be added as references or inline-->

    <StackLayout Padding="10, 20, 10, 0">
        <Label x:Name="labelNameUser"
            Text="{Binding Id}" 
            HorizontalOptions="CenterAndExpand" />
        <Entry
            x:Name="entryNameUpdate"
            Placeholder="Ingresar nombre"
            Text="{Binding Name}"/>

        <Entry
            x:Name="entryLastNameUpdate"
            Placeholder="Ingresar apellido"
            Text="{Binding LastName}"/>

        <Entry
            x:Name="entryEmailUpdate"
            Placeholder="Ingresar email"
            Text="{Binding Email}"/>

        <Entry
            x:Name="entryPasswordUpdate"
            Placeholder="Ingresar passwrod"
            Text="{Binding Password}"/>
        
        <Button
            Text="Actualizar usuario"
            Clicked="UpdateUser"
            Margin="0, 20, 0, 0"/>
    </StackLayout>


</ContentPage>