<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F1app.Home"
             Title="HOME">
  <!--Pages can be added as references or inline-->
    

    <!-- STACK PRINCIPAL-->
    <StackLayout
        Orientation="Horizontal"
        Spacing="0"
        HorizontalOptions="FillAndExpand"
        BackgroundColor="White">

        <!-- INICIO STACK DERECHA-->
        <BoxView
            HorizontalOptions="Start"
            BackgroundColor="Red"
            WidthRequest="10"
            />
        <!-- FIN STACK DERECHA-->

        <!-- INICIO STACK CENTRAL-->
        <StackLayout
            Orientation="Vertical"
            Spacing="0"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="Black">

            <!-- INICIO STACK CENTRAL SUPERIOR IMAGEN-->

            <StackLayout
                Orientation="Vertical"
                Spacing="0"
                BackgroundColor="White"
                VerticalOptions="FillAndExpand"
                HeightRequest="150">

                <StackLayout
                            Orientation="Vertical"
                            VerticalOptions="CenterAndExpand"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="Black">
                    <Image
                        HeightRequest="150"
                        WidthRequest="150"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                Source="logo2nuevo.jpg"/>

                </StackLayout>
         
                <StackLayout
                    Orientation="Vertical"
                    Spacing="0"
                    Margin="0,10,0,0"
                    VerticalOptions="Center"
                    >
                    <ScrollView
                        Orientation="Horizontal">
                        <StackLayout
                            Orientation="Horizontal">

                            <Image
                    HeightRequest="250"
                    WidthRequest="250"
                    Source="https://www.formula1.com/content/fom-website/en/latest/features/2018/5/gallery--f1_s-greatest-ever-tribute-helmets/_jcr_content/featureContent/manual_gallery/image11.img.1024.medium.jpg/1527498517130.jpg"/>
                            <Image
                    HeightRequest="250"
                    WidthRequest="250"
                    Source="https://www.formula1.com/content/fom-website/en/latest/features/2018/5/gallery--f1_s-greatest-ever-tribute-helmets/_jcr_content/featureContent/manual_gallery/image1.img.1024.medium.jpg/1527498539662.jpg"/>
                            <Image
                    HeightRequest="250"
                    WidthRequest="250"
                    Source="https://www.formula1.com/content/fom-website/en/latest/features/2018/5/gallery--f1_s-greatest-ever-tribute-helmets/_jcr_content/featureContent/manual_gallery_1209357976/image1.img.1024.medium.jpg/1527779215271.jpg"/>

                            <Image
                    HeightRequest="250"
                    WidthRequest="250"
                    Source="https://www.formula1.com/content/fom-website/en/latest/features/2018/5/gallery--f1_s-greatest-ever-tribute-helmets/_jcr_content/featureContent/manual_gallery_1209357976/image11.img.1024.medium.jpg/1527776983299.jpg"/>
                            <Image
                    HeightRequest="250"
                    WidthRequest="250"
                    Source="https://www.formula1.com/content/fom-website/en/latest/features/2018/5/gallery--f1_s-greatest-ever-tribute-helmets/_jcr_content/featureContent/manual_gallery_1722169680/image11.img.1024.medium.jpg/1527779777314.jpg"/>

                            <Image
                    HeightRequest="250"
                    WidthRequest="250"
                    Source="https://www.formula1.com/content/fom-website/en/latest/technical/2018/5/tech-tuesday--5-key-monaco-modifications/_jcr_content/featureContent/manual_gallery_973254019/image2.img.1024.medium.jpg/1527600488196.jpg"/>


                            <Image
                    HeightRequest="250"
                    WidthRequest="250"
                    Source="https://www.formula1.com/content/fom-website/en/latest/technical/2018/5/tech-tuesday--5-key-monaco-modifications/_jcr_content/featureContent/manual_gallery_1126180649/image2.img.1024.medium.jpg/1527600659319.jpg"/>


                        </StackLayout>

                    </ScrollView>


                </StackLayout>

                <StackLayout
                    Orientation="Vertical"
                    Spacing="0"
                    VerticalOptions="FillAndExpand">

                    <StackLayout
                        Orientation="Horizontal"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="CenterAndExpand">
                        <Button
                    x:Name="ListPistas"
                    Text="Pistas"
                    BackgroundColor="#B40404"
                    TextColor="White"
                    Margin="10,10,10,0"
                    FontSize="Medium"
                    BorderRadius="20"
                            HeightRequest="80"
                            WidthRequest="150"
                    Clicked="pasarPistas"/>

                        <Button
                    x:Name="ListCorredores"
                    Text="Corredores"
                    BackgroundColor="#B40404"
                    TextColor="White"
                    Margin="10,10,10,0"
                    FontSize="Medium"
                    BorderRadius="20"
                        Clicked="listaPilotos"
                            HeightRequest="80"
                            WidthRequest="150"/>

                    </StackLayout>
                    <StackLayout
                        Orientation="Horizontal"
                        HorizontalOptions="CenterAndExpand"
                        Padding="0,0,0,10">
                    <Button
                    x:Name="listUsuarios"
                    Text="Escuderias"
                    BackgroundColor="#B40404"
                    TextColor="White"
                    Margin="10,10,10,0"
                    FontSize="Medium"
                    BorderRadius="20"
                        Clicked="ClickListarEscuderias"
                        HeightRequest="80"
                            WidthRequest="150"/>
                    
                    
                    <Button
                    x:Name="CerrarSesion"
                    Text="Cerrar sesion"
                    BackgroundColor="#B40404"
                    TextColor="White"
                    Margin="10,10,10,0"
                    FontSize="Medium"
                    BorderRadius="20"
                      Clicked="ClickButtonSignOff"  
                        HeightRequest="80"
                            WidthRequest="150"/>
                    </StackLayout>

                    <StackLayout>
                        <Button
                    x:Name="ListarUsuarios"
                    Text="Usuarios"
                    BackgroundColor="#B40404"
                    TextColor="White"
                    Margin="10,10,10,20"
                    FontSize="Medium"
                    BorderRadius="20"
                      Clicked="ClickListarUsuarios"
                        HeightRequest="50"
                            WidthRequest="150"/>
                    </StackLayout>

    
                </StackLayout>

            </StackLayout>

            <!-- FIN STACK CENTRAL SUPERIOR-->

        </StackLayout>
        <!-- FIN STACK CENTRAL-->

        <!-- INICIO STACK DERECHA-->
        <BoxView
            HorizontalOptions="End"
            BackgroundColor="Red"
            WidthRequest="10"
            />
        <!-- FIN STACK DERECHA-->
    </StackLayout>
    <!-- STACK PRINCIPAL-->


 
</ContentPage>