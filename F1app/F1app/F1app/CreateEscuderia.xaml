<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F1app.CreateEscuderia"
             Title="CREAR ESCUDERIA">
  <!--Pages can be added as references or inline-->


    <!-- STACK PRINCIPAL-->
    <StackLayout
        Orientation="Horizontal"
        Spacing="0"
        HorizontalOptions="FillAndExpand"
        BackgroundColor="White">

        <!-- INICIO STACK DERECHA-->
        <BoxView
            HorizontalOptions="Start"
            BackgroundColor="Red"
            WidthRequest="10"
            />
        <!-- FIN STACK DERECHA-->

        <!-- INICIO STACK CENTRAL-->
        <StackLayout
            Orientation="Vertical"
            Spacing="0"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="White">

            <!-- INICIO STACK CENTRAL SUPERIOR IMAGEN-->

            <!-- -->
            <StackLayout Padding="10, 0, 10 ,10"
                         VerticalOptions="FillAndExpand">
                <Image
                    HeightRequest="150"
                    WidthRequest="150"
                    Source="https://previews.123rf.com/images/alonastep/alonastep1604/alonastep160400131/55748701-el-escudo-icono-de-la-corona-de-laurel-de-oro-con-la-corona-emblema-her%C3%A1ldico-dise%C3%B1o-del-signo-de-la-deco.jpg"
                    />

                <Entry
                    x:Name="entryName"
                    BackgroundColor="#F2F2F2"
                    TextColor="Black"
                    Placeholder="Nombre escuderia"
                    PlaceholderColor="Gray"
                    Margin="10,10,10,0"
                    />

                <Entry
                    x:Name="entryPoints"
                    Keyboard="Numeric"
                    BackgroundColor="#F2F2F2"
                    TextColor="Black"
                    Placeholder="Puntos de escuderia"
                    PlaceholderColor="Gray"
                    Margin="10,10,10,0"
                    />

                <Entry
                    x:Name="entryCountry"
                    BackgroundColor="#F2F2F2"
                    TextColor="Black"
                    Placeholder="Pais"
                    PlaceholderColor="Gray"
                    Margin="10,10,10,0"
                    />

                

                <Button
                        Text="Crear"
                        BackgroundColor="#B40404"
                        TextColor="White"
                        Margin="40,0,40,5"
                        FontSize="Medium"
                        BorderRadius="20"
                        VerticalOptions="End"
                   Clicked="ClickButtonCreateEscuderia"/>

                <Button
                        Text="Cancelar"
                        BackgroundColor="#B40404"
                        TextColor="White"
                        Margin="40,10,40,5"
                        FontSize="Medium"
                        BorderRadius="20"
                        VerticalOptions="End"
                        Clicked="CancelarRegresar"/>

            </StackLayout>


            <!-- -->




            <!-- FIN STACK CENTRAL SUPERIOR-->

        </StackLayout>
        <!-- FIN STACK CENTRAL-->

        <!-- INICIO STACK DERECHA-->
        <BoxView
            HorizontalOptions="End"
            BackgroundColor="Red"
            WidthRequest="10"
            />
        <!-- FIN STACK DERECHA-->
    </StackLayout>
    <!-- STACK PRINCIPAL-->

</ContentPage>